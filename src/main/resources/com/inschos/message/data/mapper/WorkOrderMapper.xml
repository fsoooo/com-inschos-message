<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.inschos.message.data.mapper.WorkOrderMapper">

    <sql id="Base_Column_List">
        `id`,`title`,`content`,`category_id`,`addressee_uuid`,`sender_uuid`,`type`,`close_status`,`solve_status`,`handle_status`,`created_at`,`updated_at`,`state`
    </sql>

    <insert id="insert" parameterType="WorkOrder">
        insert into work_order(`title`,`content`,`category_id`,`addressee_uuid`,`sender_uuid`,`type`,`close_status`,`solve_status`,`handle_status`,`created_at`,`updated_at`,`state`)
        values(
          #{title},#{content},#{category_id},#{addressee_uuid},#{sender_uuid},#{type},#{close_status},#{solve_status},#{handle_status},#{created_at},#{updated_at},#{state}
        )
    </insert>

    <update id="update" parameterType="WorkOrder">
        update work_order set
          `title`=#{title},`content`=#{content},`category_id`=#{category_id},`addressee_uuid`=#{addressee_uuid},`sender_uuid`=#{sender_uuid},`type`=#{type},`close_status`=#{close_status},`solve_status`=#{solve_status},`handle_status`=#{handle_status},`created_at`=#{created_at},`updated_at`=#{updated_at},`state`=#{state}
        where `id`=#{id}
    </update>

    <update id="updateHandleStatus" parameterType="WorkOrder">
        update work_order set
          `handle_status`=#{handle_status},`close_status`=#{close_status},`updated_at`=#{updated_at}
        where `id`=#{id}
    </update>

    <update id="updateSolveStatus" parameterType="WorkOrder">
        update work_order set
        `solve_status`=#{solve_status},`updated_at`=#{updated_at}
        where `id`=#{id}
    </update>

    <select id="selectOne" parameterType="long" resultType="WorkOrder">
        select
        <include refid="Base_Column_List"/>
        from work_order
        where `id`=#{id}
    </select>



    <select id="selectPage" parameterType="WorkOrder" resultType="WorkOrder">
        select
          <include refid="Base_Column_List"/>
        from work_order
        <where>
            <choose>
                <when test="page.lastId>0">
                    id &lt; #{page.lastId}
                </when>
                <when test="page.start>0">
                    id&lt;=(
                      select id from work_order
                      <where>
                          `type`=#{type}
                          <if test='addressee_uuid!=null'>
                              and addressee_uuid = #{addressee_uuid}
                          </if>
                          <if test="sender_uuid!=null">
                              and sender_uuid=#{sender_uuid}
                          </if>
                          <if test="close_status>0">
                              and close_status#{close_status}
                          </if>
                          <if test="handle_status">
                              and handle_status=#{handle_status}
                          </if>
                          and `state`=1
                      </where>
                      order by id desc
                      limit #{page.start},1
                    )
                </when>
                <otherwise>
                    1=1
                </otherwise>
            </choose>
            <if test='addressee_uuid!=null'>
                and addressee_uuid = #{addressee_uuid}
            </if>
            <if test="sender_uuid!=null">
                and sender_uuid=#{sender_uuid}
            </if>
            <if test="close_status>0">
                and close_status#{close_status}
            </if>
            <if test="handle_status">
                and handle_status=#{handle_status}
            </if>
            and `type`=#{type} and `state`=1
        </where>
        order by id desc
        limit #{page.offset}
    </select>
    <select id="selectCount" parameterType="WorkOrder" resultType="int">
        select
            count(1)
        from work_order
            `type`=#{type}
            <if test='addressee_uuid!=null'>
                and addressee_uuid = #{addressee_uuid}
            </if>
            <if test="sender_uuid!=null">
                and sender_uuid=#{sender_uuid}
            </if>
            <if test="close_status>0">
                and close_status#{close_status}
            </if>
            <if test="handle_status">
                and handle_status=#{handle_status}
            </if>
            and `state`=1
        order by id desc
        limit #{page.offset}
    </select>

</mapper>