<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.inschos.message.data.mapper.WorkOrderMapper">

    <sql id="Base_Column_List">
        `id`,`title`,`content`,`category_id`,`addressee_uuid`,`sender_uuid`,`type`,`close_status`,`solve_status`,`handle_status`,`created_at`,`updated_at`,`state`
    </sql>

    <insert id="insert" parameterType="WorkOrder">
        insert into work_order(`title`,`content`,`category_id`,`addressee_uuid`,`sender_uuid`,`type`,`close_status`,`solve_status`,`handle_status`,`created_at`,`updated_at`,`state`)
        values(
          #{title},#{content},#{category_id},#{addressee_uuid},#{sender_uuid},#{type},#{close_status},#{solve_status},#{handle_status},#{created_at},#{updated_at},#{state}
        )
    </insert>

    <update id="update" parameterType="WorkOrder">
        update work_order set
          `title`=#{title},`content`=#{content},`category_id`=#{category_id},`addressee_uuid`=#{addressee_uuid},`sender_uuid`=#{sender_uuid},`type`=#{type},`close_status`=#{close_status},`solve_status`=#{solve_status},`handle_status`=#{handle_status},`created_at`=#{created_at},`updated_at`=#{updated_at},`state`=#{state}
        where `id`=#{id}
    </update>

    <select id="selectOne" parameterType="long" resultType="WorkOrder">
        select
        <include refid="Base_Column_List"/>
        from work_order
        where `id`=#{id}
    </select>

</mapper>